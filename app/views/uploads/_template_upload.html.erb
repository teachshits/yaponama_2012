<!-- The template to display files available for upload -->
<script id="template-upload" type="text/x-tmpl">
  {% for (var i=0, file; file=o.files[i]; i++) { %}
  <tr class="template-upload fade">
    <td style="width: 250px">
      <div class="preview"><span class="fade"></span></div>
    </td>
    <td>
      <div class="name"><span>{%=file.name%}</span> - <span>{%=o.formatFileSize(file.size)%}</span></div><br />
      {% if (file.error) { %}
        <div class="error"><span class="label label-important">{%=locale.fileupload.error%}</span> {%=locale.fileupload.errors[file.error] || file.error%}</div><br />
      {% } else if (o.files.valid && !i) { %}
      <div class="progress progress-success progress-striped active"><div class="bar" style="width:0%;"></div></div><br />
      <div class="start">{% if (!o.options.autoUpload) { %}
        <button class="btn btn-primary">
          <i class="icon-upload icon-white"></i>
          <span>{%=locale.fileupload.start%}</span>
        </button>
        <br />
        <br />
        {% } %}</div>
      {% } else { %}
      <div></div>
      {% } %}
      <div class="cancel">{% if (!i) { %}
        <button class="btn btn-warning">
          <i class="icon-ban-circle icon-white"></i>
          <span>{%=locale.fileupload.cancel%}</span>
        </button>
        {% } %}
      </div>
    </td>
  </tr>
  {% } %}
</script>
